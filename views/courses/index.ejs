<h2 class="center">ブログ</h2>
<table class="table">
  <thead>
    <tr>
      <th>テーマ</th>
      <th>概要</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% courses.forEach(course => { %>
    <tr>
      <td>
        <a href="<%= `/courses/${course._id}` %>">
          <%= course.title %>
        </a>
      </td>
      <td>
        <%= course.description %>
      </td>
      <td>
        <a href="<%=`courses/${course._id}/edit`%>">
          編集
        </a>
      </td>
      <td>
        <a href="<%= `courses/${course._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>削除</a>
      </td>
    </tr>
    <% }); %>
  </tbody>
  <div class="center">
    <a class="button" href="/courses/new">新ブログ作成</a>
  </div>
</table>
